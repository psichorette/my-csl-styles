      <text variable="citation-number" suffix=". "/>
      <text macro="author" suffix=" // "/>
      <text macro="journal" suffix=". "/>
      <date variable="issued">
        <date-part name="year" suffix=". "/>
      </date>
      <group prefix="V. " suffix=". ">
        <text variable="volume"/>
      </group>
      <group prefix="â„– " suffix=". ">
        <text variable="issue"/>
      </group>
